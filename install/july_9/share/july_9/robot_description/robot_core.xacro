<?xml version="1.0"?>
<robot xmlns:xacro="https://www.ros.org/wiki/xacro" name="robot">


    <xacro:include filename="chassis.xacro"/>
    <xacro:include filename="inertial.xacro"/>


    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="red">
        <color rgba="0.3 0.1 0.1 1"/>
    </material>

    <material name="blue">
        <color  rgba="0 0 0.5 1"/>
    </material>

    <material name="black">
        <color rgba="0.20 0.40 0.10 1"/>
    </material>

    <!--base link -->

    <link name="base_link">
    
    </link>

    <!-- base link to chassis-->
    <joint name="base_chassis" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.05 0 0.0"/>
    </joint>

    <!--left wheel link-->
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
            <material name="yellow">
                <color  rgba="1 1 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1"  length="0.03" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>





    <!--left wheel joint link-->
    <joint name="left_wheel_to_base_link" type="continuous">
        <parent link="base_link"/> <!--here left wheel linked base link becoz of the base link at the centre of the rotation-->
        <child link="left_wheel"/>
        <origin xyz="0.0 0.115 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 1"/>
        
    </joint>

    <!--right wheel link-->
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
            <material name="yellow">
                <color  rgba="1 1 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.06" length="0.03"/>
            </geometry>
            
        </collision>
        <xacro:inertial_cylinder mass="0.1"  length="0.03" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!--right wheel joint link-->
    <joint name="right_wheel_to_base_link" type="continuous">
        <parent link="base_link"/> <!--here left wheel linked base link becoz of the base link at the centre of the rotation-->
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.115 0.0" rpy="${pi/2} 0.0 0.0"/>
        <axis xyz="0.0 0.0 -1"/>
        
    </joint>

    <!--caster wheel-->
    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.35" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    

    <!--joint link caster to the chassis-->
    <joint name="chassis_to_caster_wheel" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.180 0.0 -0.03" rpy="0.0 0.0 0.0"/>
        
    </joint>

</robot>